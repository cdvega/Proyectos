#: import random random

<ScatterTextWidget>:
    orientation: 'vertical'  # todo lo que va a la derecha de : es puro python
    TextInput:
        id: my_textinput
        font_size: 150
        size_hint_y: None
        height: 200
        text: 'default'
        on_text: my_label.color = [random.random() for _ in range(3)] + [1]
    FloatLayout:
        Scatter:
            Label:
                id: my_label
                font_size: 150
                text: my_textinput.text
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 150
        Label:
            text: my_textinput.text[:3][::-1]
            font_size: 100
            color: my_label.color
        Label:
            text: my_textinput.text[-3:][::-1]
            font_size: 100
            color: my_label.color
    